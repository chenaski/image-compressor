{
  "name": "website",
  "private": true,
  "sideEffects": false,
  "packageManager": "pnpm@7.13.2",
  "volta": {
    "extends": "../../package.json"
  },
  "scripts": {
    "build": "run-s \"build:*\"",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build:storybook": "storybook build",
    "docker:build": "docker build -f Dockerfile -t website ../..",
    "dev": "run-p \"dev:*\"",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix dev",
    "dev:storybook": "storybook dev -p 6006",
    "generate:css": "npx tailwindcss -i app/styles/index.css -o app/styles/tailwind.css",
    "start": "remix-serve build",
    "format": "prettier -c .",
    "format:fix": "prettier -w .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier -w"
    ],
    "*.{json,md}": "prettier -w"
  },
  "dependencies": {
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "immer": "^9.0.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "use-pan-and-zoom": "^0.6.5",
    "zod": "^3.19.1",
    "zustand": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@storybook/addon-controls": "7.0.0-beta.28",
    "@storybook/addon-essentials": "^7.0.0-beta.28",
    "@storybook/addon-interactions": "^7.0.0-beta.28",
    "@storybook/addon-links": "^7.0.0-beta.28",
    "@storybook/blocks": "^7.0.0-beta.28",
    "@storybook/react-vite": "7.0.0-beta.28",
    "@storybook/testing-library": "^0.0.14-next.1",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "eslint": "8.20.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "storybook": "^7.0.0-beta.28",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4",
    "vite": "^4.0.4"
  },
  "engines": {
    "node": ">=14"
  }
}
