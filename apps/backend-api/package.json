{
  "name": "backend-api",
  "private": true,
  "packageManager": "pnpm@7.13.2",
  "volta": {
    "extends": "../../package.json"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "docker:build": "docker build -f Dockerfile -t backend-api ../..",
    "start": "node dist",
    "dev": "nodemon src/index.ts",
    "format": "prettier -c .",
    "format:fix": "prettier -w .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier -w"
    ],
    "*.{json,md}": "prettier -w"
  },
  "dependencies": {
    "@fastify/websocket": "^7.1.0",
    "compressor": "workspace:*",
    "fastify": "^4.5.3"
  },
  "devDependencies": {
    "@types/node": "^18.7.14",
    "@types/ws": "^8.5.3",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
}
